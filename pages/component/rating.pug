mixin rating(number)
    -
        var n = 1
        var k = number + 1
    while n < number 
        span.rating.fas.fa-star
        if n + 1 > number
            span.rating.fas.fa-star-half-alt
        else if n + 1 === number 
            span.rating.fas.fa-star
        - n++
    while k <= 5
        span.rating.far.fa-star
        - k++
